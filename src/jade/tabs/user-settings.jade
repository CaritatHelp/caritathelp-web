.col-md-4
	.card.settings
		h5.title A propos
		.text-list
			.link(ng-class="{active:settings.isSet(1)}")
				i.fa.fa-home
				a(ng-click="settings.setTab(1)") General
			.link(ng-class="{active:settings.isSet(2)}")
				i.fa.fa-lock
				a(ng-click="settings.setTab(2)") Sécurité
			.link(ng-class="{active:settings.isSet(3)}")
				i.fa.fa-calendar
				a(ng-click="settings.setTab(3)") Calendar
			.link(ng-class="{active:settings.isSet(4)}")
				i.fa.fa-users
				a(ng-click="settings.setTab(4)") Amis

.col-md-8
	.card.settings
		.content(ng-show="settings.isSet(1)")
			h4 Paramètres du compte
			form
				fieldset.form-group
					label(for="Nom") Nom
					input.form-control(type="text")
		.content(ng-show="settings.isSet(2)")
			h4 Sécurité
		.content(ng-show="settings.isSet(3)")
			h4 Paramètres du calendrier
		.content(ng-show="settings.isSet(4)")
			h4 Gestion des amis