.ch-grid
	.ch-grid_col.--one-third_from-tablet
		.description
			header
				.description--title Description
			section
				.description--text {{vm.asso.description}}
		//-Bloc d'informations lat√©ral
		.rights.alert(ng-class="vm.rights.class") {{vm.rights.message}}
		//- Actions possibles pour l'utilisateur
		.asso-actions
			//- Rejoindre l'association
			.action(ng-if="vm.asso.rights == 'none'")
				a(ng-click="vm.joinAsso()").
					#[i.fa.fa-plus]
					Rejoindre cette association
			//- Inviter des utilisateurs
			.action(ng-if="vm.asso.rights == 'member' || vm.asso.rights == 'admin' || vm.asso.rights == 'owner'")
				a(ng-click="vm.openInvite()").
					#[i.fa.fa-user-plus]
					Inviter vos amis
			//- Quitter l'association
			.action(ng-if="vm.asso.rights == 'admin' || vm.asso.rights == 'member'")
				a(ng-click="vm.leaveAsso()").
					#[i.fa.fa-minus]
					Quitter l'association
	.ch-grid_col.--two-thirds_from-tablet
		//- Timeline de l'association
		timeline(tl-type="'association'")

script(type="text/ng-template", id="inviteFriendsModal.html")
	.modal--friends
		.modal-header
			h3.modal-title Inviter des amis
		.modal-body
			section.friend(ng-repeat="friend in friends")
				a(ui-sref="profil.home({id:friend.id})")
					img(ng-src="http://api.caritathelp.me{{friend.thumb_path}}", alt="{{friend.firstname}} {{friend.lastname}}")
				a(ui-sref="profil.home({id:friend.id})").friend--name {{friend.firstname}} {{friend.lastname}}
				button.btn.btn-primary(ng-click="inviteFriend(friend.id)") Inviter
		.modal-footer
			btn.pull-right.btn.btn-danger(ng-click="closeInvite()") Fermer
