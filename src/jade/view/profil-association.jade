.ch-profil
	.ch-profil_cover
		.ch-profil_background
			img.bscard-bkimg(ng-src="img/cover/fuzeria.jpg")
		.ch-profil_picture
			img(ng-src="http://api.caritathelp.me{{vm.asso.thumb_path}}", alt="{{vm.asso.name}}")
		.ch-profil_name {{vm.asso.name}}
	.ch-profil_nav
		button.ch-btn.ch-profil_nav-button(ui-sref="association.home", ui-sref-active="active")
			i.fa.fa-home
			.hidden-xs Accueil
		button.ch-btn.ch-profil_nav-button(ui-sref="association.members", ui-sref-active="active")
				i.fa.fa-users
				.hidden-xs Membres
		button.ch-btn.ch-profil_nav-button(ui-sref="association.calendar", ui-sref-active="active")
			i.fa.fa-calendar
			.hidden-xs Calendrier
		button.ch-btn.ch-profil_nav-button(ui-sref="association.settings", ui-sref-active="active", ng-if="vm.asso.rights == 'owner' || vm.asso.rights == 'admin'")
			i.fa.fa-cog
			.hidden-xs Administration

	.tabs
		ui-view(ng-show="vm.loaded")
		.profil--loader(ng-show="!vm.loaded")
			i.fa.fa-spin.fa-refresh
			.loader--info Chargement du profil
