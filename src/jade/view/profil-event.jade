.ch-profil
	.ch-profil_cover
		.ch-profil_background
			img.bscard-bkimg(ng-src="http://api.caritathelp.me{{vm.event.thumb_path}}", alt="{{vm.event.name}}")
		.ch-profil_picture
			img(ng-src="http://api.caritathelp.me{{vm.event.thumb_path}}", alt="{{vm.event.name}}")
		.ch-profil_name {{vm.event.title}}
	.ch-profil_nav
		button.ch-btn.ch-profil_nav-button(ui-sref="event.home", ui-sref-active="active")
			i.fa.fa-home
			.hidden-xs Accueil
		button.ch-btn.ch-profil_nav-button(ui-sref="event.guests", ui-sref-active="active")
			i.fa.fa-users
			.hidden-xs Participants
		button.ch-btn.ch-profil_nav-button(ui-sref="event.settings", ui-sref-active="active")
			i.fa.fa-cog
			.hidden-xs Param√®tres

	.tabs
		ui-view(ng-show="vm.loaded")
		.profil--loader(ng-show="!vm.loaded")
			i.fa.fa-spin.fa-refresh
			.loader--info Chargement du profil
