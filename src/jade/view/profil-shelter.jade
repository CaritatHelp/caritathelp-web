.ch-profil
	.ch-profil_cover
		.ch-profil_background
			img.bscard-bkimg(ng-src="{{vm.apiurl + vm.shelter.thumb_path}}", alt="{{vm.shelter.name}}")
		.ch-profil_picture
			img(ng-src="{{vm.apiurl + vm.shelter.thumb_path}}", alt="{{vm.shelter.name}}")
		.ch-profil_name {{vm.shelter.name}}
	.ch-profil_nav
		button.ch-btn.ch-profil_nav-button(ui-sref="shelter.home", ui-sref-active="active")
			i.fa.fa-home
			span Accueil
		button.ch-btn.ch-profil_nav-button(ui-sref="shelter.settings", ui-sref-active="active", ng-if="vm.shelter.rights == 'host' || vm.shelter.rights == 'admin'")
			i.fa.fa-cog
			span Param√®tres

	.tabs
		ui-view(ng-show="vm.loaded")
		.profil--loader(ng-show="!vm.loaded")
			i.fa.fa-spin.fa-refresh
			.loader--info Chargement du profil
