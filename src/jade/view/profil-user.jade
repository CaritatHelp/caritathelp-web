.ch-profil
	.ch-profil_cover
		.ch-profil_background
			img.bscard-bkimg(ng-src="{{vm.user.picture}}")
		.ch-profil_picture
			img(ng-src="{{vm.user.picture}}")
		.ch-profil_name {{vm.user.firstname}} {{vm.user.lastname}}
	.ch-profil_nav
		button.ch-btn.ch-profil_nav-button(ui-sref="profil.home", ui-sref-active="active")
			i.fa.fa-home
			span Accueil
		button.ch-btn.ch-profil_nav-button(ui-sref="profil.friends", ui-sref-active="active")
			i.fa.fa-users
			span Friends
		button.ch-btn.ch-profil_nav-button(ui-sref="profil.assos", ui-sref-active="active")
			i.fa.fa-truck
			span Associations
		button.ch-btn.ch-profil_nav-button(ui-sref="profil.calendar", ui-sref-active="active")
			i.fa.fa-calendar
			span Calendrier
		button.ch-btn.ch-profil_nav-button(ui-sref="profil.settings", ui-sref-active="active", ng-if="profil.isCurrent")
			i.fa.fa-cog
			span Param√®tres


	.tabs
		ui-view(ng-show="vm.loaded == 4")
		.profil--loader(ng-show="vm.loaded != 4")
			i.fa.fa-spin.fa-refresh
			.loader--info Chargement du profil
