nav.navbar(ng-if="nav.isConnected()")
	.container
		.navbar--logo
			button.toggle
				.sr-only Toggle navigation
				span-bar
				span-bar
				span-bar
			a(href="#/")
				img(src="img/logo.png", alt="CaritatHelp")
		.navbar--menu
			a.navbar--item(href="#/home", ng-class="{active:nav.isSet('home')}", ng-click="nav.setView('home')")
				span Accueil
				i.fa.fa-home
			a.navbar--item(href="#/profil", ng-class="{active:nav.isSet('profil')}", ng-click="nav.setView('profil')")
				span Profil
				i.fa.fa-user
			a.navbar--item(href="#/association", ng-class="{active:nav.isSet('asso')}", ng-click="nav.setView('asso')")
				span Associations
				i.fa.fa-coffee
			a.navbar--item(href="#msgModal", data-toggle="modal")
				span Messagerie
				i.fa.fa-envelope
			a.navbar--item(href="#/login", ng-click="nav.logout()")
				span Logout
				i.fa.fa-power-off
		.navbar--right
			a.navbar--item.hidden-lg-up(href="#")
				i.fa.fa-search
			form.hidden-md-down(role="search")
				input.form-control(type="text", placeholder="Rechercher")
			a.navbar--item(href="#notifModal", data-toggle="modal")
				i.fa.fa-bell
			a.navbar--picture(href="#/home")
				img(src="img/user2.png", alt="")
