.timeline--actu
	.actu--main(data-id="{{news.newsId}}")
		.actu--aside
			a.actu--picture(href="#")
				img(src="img/user3.png", alt="")
		.actu--body
			header.infos
				a.name(href="") {{news.username}}
				.time 25mn
			.actu--text {{news.content}}
			.actu--comments(ng-repeat="comment in news.comments")
				comment
	.actu--reply(ng-show="news.isReplying()")
		a.reply--picture(href="#")
			img(src="img/user2.png", alt="")
		.input-group
			input.form-control(
				type="text",
				placeholder="Poster un commentaire",
				ng-model="timeline.test")
			.input-group-btn
				button.btn
					i.fa.fa-play
