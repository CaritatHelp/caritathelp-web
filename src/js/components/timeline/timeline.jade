.timeline(ng-show="timeline.loaded")
	section.timeline--new
		form.timeline--post#postNews(
			novalidate="",
			name="postNews",
			ng-submit="timeline.postNews()"
			)
			.input-group
				input.form-control(
					type="text",
					placeholder="Publier un message",
					ng-model="timeline.newNews",
					required
				)
				.input-group-btn
					button.btn(type="submit")
						i.fa.fa-play
	section.news(ng-repeat="actu in timeline.news")
		news(news-id="actu.id")
.timeline--loader(ng-show="!timeline.loaded")
	.fa.fa-spin.fa-refresh
	.loader--info Chargement du fil d'actualit√©
