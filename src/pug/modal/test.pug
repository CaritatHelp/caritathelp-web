extends ../modalLayout

block header
	.ch-modal_title Cr√©er une conversation
	button.ch-btn.--icon.--inverse.--tertiary(ng-click="dismiss()")
		i.fa.fa-times

block content
	section.friend(ng-repeat="friend in friends")
		a(ui-sref="profil.home({id:friend.id})")
			img.ch-avatar(ng-src="http://api.caritathelp.me{{friend.thumb_path}}", alt="{{friend.firstname}} {{friend.lastname}}")
		a(ui-sref="profil.home({id:friend.id})").friend--name {{friend.firstname}} {{friend.lastname}}
		button.ch-btn(ng-click="addFriend(friend.id)", id="invite-{{friend.id}}") Inviter

block footer
	.ch-modal_footer-info
	.ch-modal_footer-actions
		button.ch-btn(ng-click="confirmCreation()") Valider
		button.ch-btn.--fail(ng-click="dismiss()") Fermer
